{
  "variables": {
    "atlas_token": "{{env `ATLAS_TOKEN`}}",
    "source_ami": "ami-95d7b4af"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/command.sh",
        "scripts/docker.sh",
        "scripts/containers.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-ovf",
      "vm_name": "ubuntu-14-04",
      "boot_wait": "10s",
      "format": "ova",
      "source_path": "ubuntu-14.04-server-cloudimg-amd64.ova",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm", "{{.Name}}", "--memory", "2048"
        ],
        [
          "modifyvm", "{{.Name}}", "--cpus", "2"
        ]
      ],
      "http_directory": "http",
      "headless": true
    },
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-d24c5cb3",
      "instance_type": "m3.large",
      "ssh_username": "ubuntu",
      "ami_name": "DrupalCI testrunner {{timestamp}}",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_type": "gp2",
          "volume_size": "80",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false
    },
    {
      "type": "atlas",
      "token": "{{user `atlas_token`}}",
      "only": ["virtualbox-ovf"],
      "artifact": "drupalci/testbot",
      "artifact_type": "vagrant.box",
      "metadata": {
        "created_at": "{{isotime}}",
        "provider": "virtualbox"
      }
    }
  ]
}
