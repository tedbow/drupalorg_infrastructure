{
  "variables": {
    "source_ami": "ami-95d7b4af"
  },
  "provisioners": [{
    "type":            "shell",
    "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "scripts/base.sh",
      "scripts/command.sh",
      "scripts/docker.sh",
      "scripts/containers.sh"
    ]
  }],
  "builders": [{
    "type":          "amazon-ebs",
    "region":        "us-west-2",
    "source_ami":    "ami-d24c5cb3",
    "instance_type": "m3.large",
    "ssh_username":  "ubuntu",
    "ami_name":      "DrupalCI testrunner {{isotime}}",
    "ami_block_device_mappings": [
      {
        "device_name":  "/dev/sda1",
        "volume_type":  "gp2",
        "volume_size":  "80",
        "delete_on_termination":  true
      }
    ],
    "launch_block_device_mappings": [
      {
        "device_name":  "/dev/sda1",
        "volume_type":  "gp2",
        "volume_size":  "80",
        "delete_on_termination":  true
      }
    ]
  }]
}
