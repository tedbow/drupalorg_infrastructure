# TODO: this only works for bare domains when you wanna xhprof on one of the other integration domains
# it needs to be xhprof-URI
<VirtualHost *:8080>
  ServerName xhprof.URI

  DocumentRoot /var/www/URI/xhprof/htdocs

  AddOutputFilterByType DEFLATE text/css application/javascript application/x-javascript text/html
  Header add Vary "Accept-Encoding"

  <Directory "/var/www/URI/xhprof/htdocs">
    Include vhosts.d/integration.inc
    DirectoryIndex index.php
  </Directory>
</VirtualHost>
