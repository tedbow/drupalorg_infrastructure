{
  "variables": {
    "source_ami": "ami-2b88821b"
  },
  "provisioners": [{
      "type":            "shell",
      "execute_command": "echo 'FreeBSD' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "dispatcher/scripts/base.sh"
      ]
    }
  ],
  "builders": [
    {
      "type":          "amazon-ebs",
      "region":        "us-west-2",
      "source_ami":    "{{user `source_ami`}}",
      "instance_type": "t2.medium",
      "ssh_username":  "ec2-user",
      "ami_name":      "Drupal BDD Dispatcher {{timestamp}}"
    }
  ]
}
