{
  "variables": {
    "source_ami": "ami-534d5d32"
  },
  "provisioners": [{
    "type":            "shell",
    "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "slave/scripts/base.sh",
      "slave/scripts/docker.sh",
      "slave/scripts/containers.sh",
      "slave/scripts/drupal-infrastructure.sh"
      "slave/scripts/key.sh"
    ]
  }],
  "builders": [{
    "type":          "amazon-ebs",
    "region":        "us-west-2",
    "source_ami":    "{{user `source_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username":  "ubuntu",
    "ami_name":      "DrupalOrg BDD slave {{timestamp}}",
    "ami_block_device_mappings": [
      {
        "device_name":  "/dev/sda1",
        "volume_type":  "standard",
        "volume_size":  "20",
        "delete_on_termination":  true
      }
    ]
  }]
}
